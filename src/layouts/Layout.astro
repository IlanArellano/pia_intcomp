---
import Footer from "../components/Footer.astro";
import MenuManager from "../components/Menu/MenuManager.astro";
import "primereact/resources/themes/lara-light-indigo/theme.css";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta
      name="viewport"
      content="width=device-width, user-scalable=no, initial-scale=1.0, maxium-scale=1.0,
    minium-scale=1.0"
    />
    <link
      rel="icon"
      sizes="192x192"
      href="https://static.wixstatic.com/media/7e3fa0_30852f50c04840b9a548c85ff70dbec2.png/v1/fill/w_192%2Ch_192%2Clg_1%2Cusm_0.66_1.00_0.01/7e3fa0_30852f50c04840b9a548c85ff70dbec2.png"
      type="image/png"
    />
    <link
      rel="shortcut icon"
      href="https://static.wixstatic.com/media/7e3fa0_30852f50c04840b9a548c85ff70dbec2.png/v1/fill/w_32%2Ch_32%2Clg_1%2Cusm_0.66_1.00_0.01/7e3fa0_30852f50c04840b9a548c85ff70dbec2.png"
      type="image/png"
    />
    <link
      rel="apple-touch-icon"
      href="https://static.wixstatic.com/media/7e3fa0_30852f50c04840b9a548c85ff70dbec2.png/v1/fill/w_180%2Ch_180%2Clg_1%2Cusm_0.66_1.00_0.01/7e3fa0_30852f50c04840b9a548c85ff70dbec2.png"
      type="image/png"
    />
    <title>Headhunter Hairstyling | {title}</title>
  </head>
  <body>
    <MenuManager />
    <main class="min-h-screen px-0 sm:px-10 py-12">
      <slot />
    </main>
    <Footer />

    <script
      src="https://kit.fontawesome.com/9d96d0d962.js"
      crossorigin="anonymous"></script>
  </body>
</html>

<style is:global>
  @font-face {
    font-family: "open-sans";
    src: url("/Open_Sans/OpenSans-VariableFont_wdth,wght.ttf");
  }
  :root {
    --accent: 136, 58, 234;
    --accent-light: 224, 204, 250;
    --accent-dark: 49, 10, 101;
    --accent-gradient: linear-gradient(
      45deg,
      rgb(var(--accent)),
      rgb(var(--accent-light)) 30%,
      white 60%
    );
  }
  * {
    padding: 0;
    margin: 0;
    box-sizing: border-box;
  }
  html {
    font-family: open-sans, system-ui, sans-serif;
  }

  .title-container {
    position: relative;
  }

  .title-container::after {
    content: "";
    transition: transform 1s ease;
    position: absolute;
    bottom: -5px;
    width: 100%;
    transform: scale(0);
    height: 2px;
    background-color: black;
  }

  .title-container-width::after {
    transform: scale(1);
  }

  @keyframes startFading {
    0% {
      opacity: 0;
      transform: translateY(-20px);
    }
    100% {
      opacity: 1;
      transform: none;
    }
  }
</style>
