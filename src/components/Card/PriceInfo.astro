---
import type { PriceInfo } from "../../types/card";

interface Props extends PriceInfo {}

const { title, price } = Astro.props;
---

<div
  class="priceInfoContainer flex relative bg-transparent z-[1] px-5 flex-[1] w-full items-center justify-between text-xl"
>
  <div
    class="absolute priceInfoContact flex gap-5 justify-center items-center top-[0] left-[0] h-full bg-card-button-background -z-[1]"
  >
    <button class="rounded bg-[black] py-3 px-10 text-[white]">Stylist</button>
    <button>Contact</button>
  </div>
  <div class="absolute w-full h-full bg-[white] -z-[2] top-[0] left-[0]"></div>
  <span>{title}</span>
  <span class="font-bold">${price}</span>
</div>

<style>
  .priceInfoContainer {
    transition:
      transform 0.15s ease,
      border 0.15s ease;
    &:hover {
      transform: translate(-0.5rem, -0.5rem);
      border: solid 1px rgba(0, 0, 0, 0.4);

      .priceInfoContact {
        width: 100%;
      }
    }
  }

  .priceInfoContact {
    width: 0;
    transition: width 0.7s ease-out;
    overflow-x: hidden;
  }
</style>
